landPaddingVert= baseline*2
landPaddingHorz= baseline*2.25
landColors= (#fff685 #7ecbb6 #9f6eaf magenta)
// colors:   yellow  green   purple  magenta

#land
  makeAbsolute: 0, 0, 0, 0
  a
    hasOutline: #fff
.survey.callback.success #land
  z-index: 10

//  BACKGROUND
#land .background
  makeAbsolute: 0 0 0 surveyWidth
  > div
    makeAbsolute: 0 0 0 100%
    multiTransition: 1 4 durationAlt
    for child in (0..3)
      &:nth-child({child+1})
        background-color: landColors[child]
    &:nth-child(4):after
      content: ''
      display: block
      makeAbsolute: 100% 0 0 0
      transition: inherit
      background-image: linear-gradient(transparent, magenta-alt)
.survey.callback.success #land .background > div
  {align-alt}: -150%
  multiTransition: 1 4 durationAlt
  &:nth-child(4):after
    top: 0
@media (max-width: delta - 1)
  .survey #land .background > div
    multiTransition: 1 4 durationAlt 0 true
@media (min-width: delta)
  .survey #land .background > div
    {align-alt}: 0
    &:nth-child(4):after
      top: 0

//  Z-INDEX
#land #nucubucFlat,
#land .reach,
#land .text,
#land .social
  z-index: -1
.survey #land #nucubucFlat,
.survey #land .reach,
.survey #land .text,
.survey #land .social
  z-index: 2
.survey.callback.success #land
  visibility: visible
@media (max-width: delta - 1)
  .survey #land
    visibility: hidden

//  NUCUBUC FLAT
#land #nucubucFlat
  makeAbsolute: landPaddingVert (landPaddingHorz - nucubucFlat-margin)
@media (max-width: beta - 1)
  .survey.callback.success #land #nucubucFlat
    {align}: 50%
    transform: translateX(-50%)

//  REACH
#land .reach
  makeAbsolute: landPaddingVert auto auto surveyWidth
  margin-{align-alt}: landPaddingHorz
  opacity: 0
  hasTransition: durationAlt duration
  .link
    line-height: nucubucFlat-height
    color: #fff
.survey.callback.success #land .reach
  {align-alt}: 0
  opacity: 1
  hasTransition: durationAlt 0 step*6
@media (min-width: delta)
  .survey #land .reach
    opacity: 1
@media (max-width: beta - 1)
  .survey.callback.success #land .reach
    top: landPaddingVert + nucubucFlat-height + nucubucFlat-margin
    {align-alt}: 50%
    margin-{align-alt}: 0
    transform: translateX(50%)

//  TEXT
#land .text
  makeAbsolute: auto landPaddingHorz landPaddingVert
  li
    makeAbsolute: auto 0 0
    white-space: nowrap
    .h1
      color: #fff
.survey.callback.success #land .text .current .spans > span
  z-index: 1
  opacity: 1
  transform: translateY(0) !important
@media (max-width: delta - 1)
  .survey #land .text .current .spans > span
    z-index: auto
    opacity: 0
    transform: translateY(heading1-height) !important
@media (max-width: beta - 1)
  .survey.callback.success #land .text
    {align}: 50%
    li
      text-align: center
      transform: translateX(-50%)
      .h1
        font-size: font-heading2

//  SOCIAL
#land .social
  makeAbsolute: auto landPaddingHorz ((landPaddingVert - social-height)/2)
@media (max-width: beta - 1)
  .survey.callback.success #land .social
    {align}: 50%
    transform: translateX(-50%)
