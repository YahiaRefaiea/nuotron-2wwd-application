questions-width= baseline*9.75
questionsHeights= fullNameHeight, genderHeight, emailHeight, facebookHeight, mobileHeight, addressHeight, webExperienceHeight, webExperienceSpecifiedHeight, englishHeight, mathHeight, bioHeight, goalHeight, greatestGoalHeight, beliefHeight, skillsHeight, interestsHeight, drinkHeight

#questions
  makeAbsolute: 50% 50%
  width: questions-width
  margin-{align}: -(questions-width/2)
  &:before
    content: ''
    z-index: -1
    display: block
    makeAbsolute()
    width: 100%
    height: goalHeight + input-height
    margin-top: -(goalHeight/2)

  > li
    makeAbsolute()
    z-index: -2
    for question, i in questionsHeights
      &:nth-child({i+1})
        nuotronMargin: question
    .small
      margin-bottom: baseline*.25
    .q
      margin-bottom: baseline*.75
      font-weight: weight-bold
      color: text-dark-alt
    .answer
      opacity: 0
      transform: translateY(input-height)
      hasTransition()
    &.current
      z-index: auto
      .answer
        opacity: 1
        transform: translateY(0)
        hasTransition: duration 0 step*6

//  RANGE ELEMENTS
.webExperience .range,
.english .range,
.math .range
  ul li
    for i in ((11 - 10)..(11 - 1))
      &:nth-child({i})
        {align}: (100%/(11 - 1))*(i - 1)
