nuotronFlat-height= baseline*1.25
nuotronFlat-width= 110px
nuotronFlat-margin= 10px
nPathLength= 29
cPathLength= 28
bPathLength= 47

//  NUOTRON FLAT
#nuotronFlat
  width: nuotronFlat-width + nuotronFlat-margin
  height: nuotronFlat-height
  div, svg
    display: block
    makeAbsolute()

//  SYMBOL
#nuotronFlat .symbol
  width: nuotronFlat-height
  height: nuotronFlat-height
  margin-{align}: - translate
  border-radius: 50%
  hasTransition: durationAlt duration
.survey.callback.success #nuotronFlat .symbol
  margin-{align}: 0
  background-color: rgba(0, 0, 0, .3)
@media (min-width: delta)
  .survey #nuotronFlat .symbol
    margin-{align}: 0
    background-color: rgba(0, 0, 0, .3)

//  SVG
#nuotronFlat svg
  makeAbsolute: 5px nuotronFlat-margin
  fill: none
  stroke: #fff
  stroke-linecap: round
  stroke-width: 4
#nuotronFlat svg path
  opacity: 0
  multiTransition: 1 7 durationAlt duration
  //  N & U LETTERS
  &:nth-child(1),
  &:nth-child(2),
  &:nth-child(4),
  &:nth-child(6)
    stroke-dasharray: nPathLength
    stroke-dashoffset: -(nPathLength)
  //  C LETTERS
  &:nth-child(3),
  &:nth-child(7)
    stroke-dasharray: cPathLength
    stroke-dashoffset: cPathLength
  //  B LETTER
  &:nth-child(5)
    stroke-dasharray: bPathLength
    stroke-dashoffset: bPathLength
.survey.callback.success #nuotronFlat svg path
  opacity: 1
  stroke-dashoffset: 0
@media (min-width: delta)
  .survey #nuotronFlat svg path
    opacity: 1
    stroke-dashoffset: 0
