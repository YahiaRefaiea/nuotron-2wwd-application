nuotron= {
  color: #f35635,
  size: baseline*3,
  margin: baseline*1.5,
  stroke: 18px,
  dot: 24px,
  duration: 1.2s,
  twist: 4,
  rotation: 45deg
}

nuotronMargin(container)
  margin-top: -(container/2) + nuotron.size + nuotron.margin

//  NUOTRON
#nuotron
  makeAbsolute: 50% 50%
  width: nuotron.size
  height: nuotron.size
  margin-top: -(presentHeight/2)
  margin-{align}: -(nuotron.size*.5)
  transform: rotate(nuotron.rotation)
  hasTransition: durationAlt
  &, & *, & *:before
    display: block
    position: absolute
  .ellipse, .dot
    top: 0
    left: 0
    bottom: 0
    right: 0

  //  ELLIPSE
  .ellipse
    border: nuotron.stroke solid nuotron.color
    border-radius: 50%

  //  DOT
  .dot
    animation: none
    &:before
      content: ''
      top: -(nuotron.dot + nuotron.stroke)
      left: 50%
      width: nuotron.dot
      height: nuotron.dot
      margin-left: -(nuotron.dot*.5)
      border-radius: 50%
      background-color: nuotron.color
      animation: none

.waiting #nuotron .dot
  animation: dotRotate nuotron.duration*nuotron.twist linear infinite
  @keyframes dotRotate
    100%
      transform: rotate(360deg)
  &:before
    animation: dotEffect nuotron.duration ease-in-out infinite
    @keyframes dotEffect
      50%
        top: nuotron.size + nuotron.stroke
      0%, 50%, 100%
        transform: scale(1)
      25%
        transform: scale(.5)
      75%
        transform: scale(1.5)
@media (min-width: delta)
  .survey #nuotron
    {align}: 50% + ((100% - surveyWidth)/2)
.callback #nuotron
  margin-top: -(presentHeight/2) !important

